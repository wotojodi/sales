{
  "name": "Python 3 + API",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "login.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "start_services.sh"
  },
  "portsAttributes": {
    "8000": {
      "label": "Main API (api.py)",
      "onAutoForward": "openPreview"
    },
    "8501": {
      "label": "Streamlit / Dashboard",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8000,
    8501
  ]
}
